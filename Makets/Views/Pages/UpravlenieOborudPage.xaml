<Page x:Class="Makets.UpravlenieOborudPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Makets"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpravlenieOborudPage"
      Background="White">

    <Grid>
        <DockPanel>
            <Label Content="Управление сетевым оборудованием"
                   FontSize="33"
                   DockPanel.Dock="Top"/>
            <Separator DockPanel.Dock="Top"
                       Background="Gray"/>
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Content="Контроль состояний"
                        x:Name="ContBut"
                        Click="ContBut_Click"
                        />
                <Button Content="Расчет количества базовых станций"/>
            </StackPanel>
        </DockPanel>
        
    </Grid>
</Page>
